{
    "compilerOptions": {
        "rootDir": "src/contexts",
        "baseUrl": "src",
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "strict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist",
        "sourceMap": true,
        "plugins": [{ "name": "next" }],
        "paths": {
            "": ["./src/contexts/*"],
            "~/*": ["./*"]
            // "@coinmeca/wallet-sdk/*": ["../wallet-sdk/src/*"]
        },
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "include": ["src/contexts", "next-env.d.ts", ".next/types/**/*.ts", "*.ts", "*.tsx"],
    "exclude": ["node_modules", "**/.*/", "next.config.*", "dist", "build", "wallet-sdk"]
}
